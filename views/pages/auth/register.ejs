<h1>Rejestracja</h1>

<form method="post">
	<div class="mb-3">
		<label for="email" class="form-label">Email</label>

		<input
			type="email"
			class="form-control <%- errors?.email ? 'is-invalid' : '' %>"
			name="email"
			value="<%= form.email %>"
			id="email"
			required
		/>

		<% if (errors?.email) { %>
		<div class="invalid-feedback"><%= errors.email.message %></div>
		<% } %>
	</div>

	<div class="mb-3">
		<label for="username" class="form-label">Name</label>

		<input
			type="text"
			class="form-control <%- errors?.username ? 'is-invalid' : '' %>"
			name="username"
			value="<%= form.username %>"
			id="username"
			required
		/>

		<% if (errors?.username) { %>
		<div class="invalid-feedback"><%= errors.username.message %></div>
		<% } %>
	</div>

	<label for="password" class="form-label">Password</label>
	<div class="input-group mb-3">
		<input
			type="password"
			class="form-control <%- errors?.password ? 'is-invalid' : '' %>"
			name="password"
			value="<%= form.password %>"
			id="password"
			required
			autocomplete="off"
		/>
		<button class="input-group-text" id="show-password" type="button">
			Show Password
		</button>

		<% if (errors?.password) { %>
		<div class="invalid-feedback"><%= errors.password.message %></div>
		<% } %>
	</div>

	<button type="submit" class="btn btn-outline-primary">Register</button>
</form>

<% if (errors) { %>
<br />
<div class="alert alert-danger">Correct the data in the form!</div>
<% } %>

<script>
	const showPass = document.querySelector('#show-password')
	const input = document.querySelector('#password')

	const showPassword = () => {
		if (input.type == 'password') {
			input.type = 'text'
		} else if (input.type == 'text') {
			input.type = 'password'
		}
	}

	showPass.addEventListener('click', showPassword)
</script>
